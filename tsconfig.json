{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "rootDir": "./",
    "sourceMap": true,
    "target": "esnext",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
  },
  "exclude": [
    "prod_node_modules"
  ]
}