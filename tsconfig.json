{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "jsx": "preserve",
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "es2017",
    "moduleResolution": "node",
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "rootDir": "./",
    "sourceMap": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
