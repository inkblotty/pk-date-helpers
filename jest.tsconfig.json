{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "baseUrl": "./",
    "exclude": [
      "node_modules"
    ],
    "experimentalDecorators": true,
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "es2017",
    "moduleResolution": "node",
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "rootDir": "./",
    "sourceMap": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
