{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitUseStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "rootDir": "./",
    "sourceMap": false,
    "target": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
